<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
   <thead class="table-dark">
    <tr>
      <th>Artist</th>
      <th>Album name</th>
      <th>Year</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.artist, album %></td>
        <td><%= album.album_name %></td>
        <td><%= album.year %></td>
        <% if album.user == current_user %>
        <td><%= link_to 'Delete', album, method: :delete, class:"btn btn-outline-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path, class:'btn btn-secondary' %>

<% else %>
<h1>Home page</h1>
<p>This is an App to you list your favorites artists music albums.</p>

<% end %>